{
  "name": "chinchinbooth",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "shadcn": "pnpm dlx shadcn@latest add",
    "prepare": "husky && husky install",
    "docker:build": "docker build -t chinchinbooth-docker .",
    "docker:run": "docker run -d -p 3000:3000 --name chinchinbooth-container chinchinbooth-docker",
    "docker:stop": "docker stop chinchinbooth-container && docker rm chinchinbooth-container",
    "docker:clean": "docker container prune -f && docker volume prune -f && docker network prune -f",
    "docker:logs": "docker logs chinchinbooth-container",
    "docker:restart": "npm run docker:stop && npm run docker:build && npm run docker:run",
    "docker:status": "docker ps -a | grep chinchinbooth-container",
    "docker:image-clean": "docker image prune -f --filter label=chinchinbooth",
    "update-version": "sh scripts/update-version.sh",
    "bundle-analyzer": "ANALYZE=true pnpm build"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.3.1",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@types/canvas-confetti": "^1.9.0",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "context-filter-polyfill": "^0.3.22",
    "framer-motion": "^12.5.0",
    "html2canvas-pro": "^1.5.8",
    "lucide-react": "^0.479.0",
    "motion": "^12.6.3",
    "next": "15.2.2",
    "next-cloudinary": "^6.16.0",
    "next-intl": "4",
    "next-themes": "^0.4.6",
    "qrcode.react": "^4.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.2",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.2.4",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.2",
    "husky": "^8.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
